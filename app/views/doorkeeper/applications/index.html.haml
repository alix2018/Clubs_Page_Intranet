.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-heading.clearfix
        %h3.panel-title.pull-left.with-button= t('.title')
        = link_to t('.new'), new_oauth_application_path, class: 'btn btn-success pull-right'
      .panel-body
        %table.table.table-striped
          %thead
            %tr
              %th= t('.name')
              %th= t('.callback_url')
              %th
              %th
          %tbody
            - @applications.each do |application|
              %tr{:id => "application_#{application.id}"}
                %td= link_to application.name, oauth_application_path(application)
                %td= application.redirect_uri
                %td= link_to t('doorkeeper.applications.buttons.edit'), edit_oauth_application_path(application), class: 'btn btn-link'
                %td= render 'delete_form', application: application
