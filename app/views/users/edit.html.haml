.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Mes informations
      .panel-body
        = bootstrap_form_for(@user) do |f|
          .row
            .col-md-6.col-xs-12
              = f.text_field :lastname, {label: "Nom"}
            .col-md-6.col-xs-12
              = f.text_field :name, {label: "Prenom"}
            .col-md-6.col-xs-12
              = f.text_field :phone, {label: "Telephone portable"}
            .col-md-6.col-xs-12
              = f.text_field :email, {label: "Email"}
            .col-md-6.col-xs-12
              = f.date_field :birthday, {label: "Anniversaire", value: "1994-09-28"}
            .col-md-6.col-xs-12
              = f.text_field :address, {label: "Addresse", value:"41 rue de Selestat 67100 Strasbourg"}
          = f.submit
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Changer mon mot de passe
      .panel-body
        = bootstrap_form_tag({url: user_update_password_path(@user), method: :put}) do |f|
          = f.password_field :current_password, {label: "Mot de passe actuel"}
          = f.password_field :password, {label: "Nouveau mot de passe"}
          = f.password_field :confirmation, {label: "Confirmation"}
          = f.submit "Valider"