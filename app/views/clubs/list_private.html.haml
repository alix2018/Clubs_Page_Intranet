.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Liste des clubs
      .panel-body
        %ul.nav.nav-tabs{:role => "tablist"}
          %li{:role => "presentation"}
            = link_to "Tous les clubs", clubs_list_path, {:role => "tab"}    
          %li.active{:role => "liste"}
            %a{"aria-controls" => "my-clubs", "data-toggle" => "tab", :role => "tab"}
              Mes clubs   
        .tab-content
          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th Nom du club
                  %th Site Web
                  %th Profil
                  %th News
              %tbody
                - @clubs.sort_by{|club| club.name }.each do | club |
                  %tr
                    %td
                      - if club.name
                        = club.name
                    %td
                      - if club.website
                        = club.website
                    %td
                      %a.btn.btn-sm.btn-default{:href => clubs_profile_path}
                        Voir le profil
                    %td
                      %a.btn.btn-sm.btn-default{:href => clubs_path}
                        Voir les news
