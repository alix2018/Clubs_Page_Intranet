.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      - if current_page?(new_club_path)
        .panel-heading Créer un club
      - else
        .panel-heading Modifier un club
      .panel-body
        = bootstrap_form_for(@club, multipart: true) do |f|
          %center
            - if current_page?(new_club_path)
              %h1 Création d'un nouveau club
            - else
              %h1 Modification du club
          %br
          %br
          .row
            .col-md-6.col-xs-12
              = f.text_field :name, {label: "Comment veux-tu appeler ton club?", :placeholder => "Nom du club"}
            .col-md-6.col-xs-12
              = f.text_field :website, {label: "Quel est le site web de ton club?", :placeholder => "Site Web"}
            .col-md-12
              = f.text_area :description, {label: "Description", :placeholder => "Une petite description...", :class => "text-area-width", :rows => "5"}
              %label Logo
              .input-group
                %span.input-group-btn
                  %span.btn.btn-primary.btn-file
                    Choisir un fichier
                    = f.file_field :logo, hide_label: true
                %input.form-control{:readonly => "readonly", :type => "text"}/      
            .form-group{:style => "float:right;margin-right:15px;margin-top:15px"}
              - if current_page?(new_event_path)
                = f.submit "Créer le club", :class => "btn btn-primary"
              - else
                = f.submit "Modifier le club", :class => "btn btn-primary"

:javascript
  window.current_user_promo = #{current_user.promo}