.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-body
        %ul#myTab.nav.nav-pills.nav-justified
          %li
            %a{:href => "http://localhost:3000/club"}
              %i.fa.fa-newspaper-o{"aria-hidden" => "true"}
              \&nbsp; News des clubs
          %li
            %a{:href => "http://localhost:3000/club/lesclubs"}
              %i.fa.fa-users{"aria-hidden" => "true"}
              \&nbsp; Les Clubs
          %li.active
            %a{:href => "http://localhost:3000/club/subscribe"}
              %i.fa.fa-list{"aria-hidden" => "true"}
              \&nbsp; S'inscrire
        #myTabContent.tab-content
          #justifmenu01.tab-pane.fade.active.in
            %p
      .panel
        .panel-body
          %center
            %h1 Remplissez le formulaire
          %br
            %br
              :css
                .bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form{font-family: Arial, Helvetica, sans-serif; color: black}.bootstrap-iso form button, .bootstrap-iso form button:hover{color: white !important;} .asteriskField{color: red;}/ HTML Form (wrapped in a .bootstrap-iso div)
              .bootstrap-iso
                .container-fluid
                  .row
                    .col-md-12.col-sm-12.col-xs-12
                      %form{:method => "post"}
                        .form-group
                          %label.control-label{:for => "Quel club veux tu rejoindre?"}
                            Quel club veux-tu rejoindre?
                            %span.asteriskField
                              *
                          .icon-addon.addon-md
                            %select.form-control
                              %option Nom du club
                              - @clubs.each do | club |
                                %option=club.name
                        .form-group
                          %label.control-label{:for => "poste"}
                            A quel poste?
                          %input#subject.form-control{:name => "poste", :type => "text", :placeholder => "Nom du poste"}/
                        .form-group
                          %label.control-label{:for => "message"}
                            Si tu as quelque chose à rajouter :
                          %textarea#message.form-control{:cols => "150", :name => "description", :rows => "10", :placeholder => "Entre ton texte ici"}
                        .form-group
                          %div
                            %button.btn.btn-primary{:name => "submit", :type => "submit"}
                              Envoyer la demande au président


:javascript
  window.current_user_promo = #{current_user.promo}
