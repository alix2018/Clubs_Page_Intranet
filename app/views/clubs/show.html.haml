              .panel-body{:style => "padding-top:0.05%"}
                %h1 Description
                %br
                %p{:style => "text-align: justify"}
                  = @club.description
            .panel.panel-default{:style => "margin-top:8%;margin-bottom:8%"}
              .panel-body{:style => "padding-top:0.05%"}
                %h1 Informations
                %br
                %B PrÃ©sident : 
                = @club.president
                
                %br
                %B Membres : 
                = @club.users.map{|user| user.name}.join(", ")
                %br
                %br
                %button.btn.btn-default{:type => "button"} Nous contacter
                = link_to clubs_join_path do
                  %button.btn.btn-default{:type => "button"} Rejoindre ce club
                %br
                %br
                %br
                - if @admin
                  %h1 Administrer le club :
                  .col-md-12.col-xs-12
                    .row{:style => "margin:1%"}
                      
                     
                      = link_to t('.destroy', :default => t("helpers.links.destroy")), club_path(@club), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Voulez vous vraiment supprimer le club?')) }, :class => 'btn btn-danger pull-right', :style => "margin:1%"
                      = link_to 'Editer le club', edit_club_path(@club), :class=>"btn btn-md btn-success pull-right", :style => "margin:1%"
