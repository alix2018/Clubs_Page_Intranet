.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-body{:class => "panel-body-show"}
        .row{:class => "row-show-gray"}
          .col-md-3.col-xs-4{:class => "row-show-blue"}
            %br
              %center{:class => "margin-center"}
                %img.img-responsive.img-circle{:src => @club.logo.url, :class => "img-profil"}
                %h1
                  = @club.name
          .col-md-9.col-xs-8{:class => "description-information-panel"}
            .panel.panel-default{:class => "description-panel"}
              .panel-body{:class => "panel-body-style"}
                %h1 Description
                %p{:class => "content-newline-enter"}
                  = @club.description
            .panel.panel-default{:class => "information-panel"}
              .panel-body{:class => "panel-body-style"}
                %h1 Informations
                %br
                %B PrÃ©sident : 
                = @club.president
                
                %br
                %B Membres : 
                = @club.users.map{|user| user.name}.join(", ")
                %br
                %br
                =mail_to @pres_email do
                  %button.btn.btn-default{:type => "button"} Nous contacter
                =mail_to @pres_email, :subject => @sujet, :body => @body do
                  %button.btn.btn-default{:type => "button"} Rejoindre ce club
                %br
                %br
                - if @admin
                  %h1 Administrer le club :
                  .row
                    .boutons_profil
                      = link_to club_member_add_url , :class=>"btn btn-md btn-default" do
                        GÃ©rer les membres
                      = link_to edit_club_path(@club), :class=>"btn btn-md btn-success" do
                        Modifier le profil
                      = link_to t('.destroy', :default => t("helpers.links.destroy")), club_path(@club), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Voulez vous vraiment supprimer cet article ?')) }, :class => 'btn btn-danger'

