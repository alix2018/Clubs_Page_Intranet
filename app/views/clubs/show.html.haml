.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-body{:class => "panel-body-show"}
        .row{:class => "row-show-gray"}
          .col-md-3.col-xs-4{:class => "row-show-blue"}
            %br
              %center{:class => "margin-center"}
                %img.img-responsive.img-circle{:src => @club.logo.url, :class => "img-circle-responsive"}
                %h1
                  = @club.name
                %br
                = link_to clubs_join_path do #TODO
                  %button.btn.btn-default{:type => "button"} Voir les news
          .col-md-9.col-xs-8{:class => "description-information-panel"}
            .panel.panel-default{:class => "description-panel"}
              .panel-body{:class => "panel-body-style"}
                %h1 Description
                %br
                %p
                  = @club.description
            .panel.panel-default{:class => "information-panel"}
              .panel-body{:class => "panel-body-style"}
                %h1 Informations
                %br
                %B PrÃ©sident : 
                = @club.president
                
                %br
                %B Membres : 
                = @club.users.map{|user| user.name}.join(", ")
                %br
                %br
                %button.btn.btn-default{:type => "button", :href => "mailto: @club.email"} Nous contacter
                = link_to clubs_join_path do
                  %button.btn.btn-default{:type => "button"} Rejoindre ce club
                %br
                %br
                %br
                - if @admin
                  %h1 Administrer le club :
                  .col-md-12.col-xs-12
                    .row{:class => "admin-button"}                     
                      = link_to t('.destroy', :default => t("helpers.links.destroy")), club_path(@club), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Voulez vous vraiment supprimer le club?')) }, :class => 'btn btn-danger pull-right', :class => "admin-button"
                      = link_to 'Editer le club', edit_club_path(@club), :class=>"btn btn-md btn-success pull-right", :class => "admin-button"
