.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-body{:style => "padding:1.5%"}
        .col-md-2.col-sm-3.text-center
          %center
            - if @event.club
              %a.story-img 
                = link_to @event.club do
                  %img.img-responsive.img-circle{:src => @event.club.logo.url, :style => "width:110px;height:110px;margin-top:40%"}
            %h3=@event.club.name
        .col-md-10.col-sm-9
          %center
            %h1=@event.title
          %br
          %p{:style => "text-align:justify;margin-bottom:30px"} 
            Du 
            =@event.date_start.strftime("%d %b")
            à 
            =@event.date_start.strftime("%H:%M") 
            %br
            Au
            =@event.date_end.strftime("%d %b")
            à 
            =@event.date_end.strftime("%H:%M")
            %br
            À :
            =@event.location
            %br
            %br
            %br
            Description :
            %br
            =@event.description
          %i Ecrit par 
          //=@event.user.name 
          //  =@event.user.lastname
          .publie{:style => "text-align:right;margin-top:5%;padding-bottom:2%"}
            Créé le 
            =@event.created_at.strftime("%d %b. %Y")
            à
            =@event.created_at.strftime("%H:%M")
          .row{:style => "margin-top:5%"}
            = link_to edit_event_path(@event), :class=>"btn btn-md btn-success" do
              Modifier
            = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Voulez vous vraiment supprimer cet évènement ?')) }, :class => 'btn btn-danger'