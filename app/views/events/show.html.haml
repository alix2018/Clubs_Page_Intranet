.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-heading
      .panel-body{:class => "article"}
        .title-article
          =@event.title
        .panel.panel-default{:class => "panel-date"} 
          .publier-article
            - if @event.updated_at == @event.created_at
              Publié le 
              =@event.created_at.strftime("%d %b. %Y")
              à
              =@event.created_at.strftime("%H:%M")
            - elsif @event.updated_at != @event.created_at
              .col-md-4{:class => "publier-article"}
                Publié le 
                =@event.created_at.strftime("%d %b. %Y")
                à
                =@event.created_at.strftime("%H:%M")
              .col-md-offset-5{:class => "modifier-article"}
                Modifié le 
                =@event.updated_at.strftime("%d %b. %Y")
                à
                =@event.updated_at.strftime("%H:%M")
        .lieu{:class => "show-event-date"} 
          Du 
          =@event.date_start.strftime("%d %b")
          à 
          =@event.date_start.strftime("%H:%M") 
          %br
          Au
          =@event.date_end.strftime("%d %b")
          à 
          =@event.date_end.strftime("%H:%M")
          %br
          À :
          =@event.location
        .content-article
          =@event.description
        .separator-bar
        .logo
          - if @event.club
            = link_to @event.club do
              %img.img-responsive.img-circle{:src => @event.club.logo.url, :class => "img-article"}
          .ecrivain
            Ecrit par
            = @event.user.name 
            = @event.user.lastname
            de
            = @event.club.name
        .row{:class => "commentaires"}
          = link_to clubs_join_path do
            %button.btn.btn-default{:type => "button", :class =>"pull-right"} Commentaires  
        .row{:class => "modifier"}
          = link_to edit_event_path(@event), :class=>"btn btn-md btn-success" do
            Modifier
          = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Voulez vous vraiment supprimer cet événement ?')) }, :class => 'btn btn-danger'