.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-heading Créer un évènement
      .panel-body
        = bootstrap_form_for(@event, multipart: true) do |f|
          %center
            %h1 Formulaire de création
          %br
          %br
          .row
            .col-md-6.col-xs-12
              .icon-addon.addon-md
                = f.select :club_id, current_user.club.collect { |p| [ p.name, p.id ]}, label: "Pour quel club veux-tu publier un event" 
            .col-md-12.col-xs-12
              = f.text_field :title, {label: "Nom de l'évènement", :placeholder => "Nom de l'évènement", :type => "text"}
            .col-md-12.col-xs-12
              = f.text_field :location, {label: "Lieu de l'évènement", :placeholder => "Lieu de l'évènement", :type => "text", :class => "adresse-autocomplete"}                

            .col-md-6.col-xs-12
              =f.text_field :date_start, {label: "Date de début de l'événement", :type => "text", :placeholder => "Date de début de l'évènement", :class => "datetimepicker"  }
            .col-md-6.col-xs-12
              =f.text_field :date_end, {label: "Date de fin de l'événement", :type => "text", :placeholder => "Date de fin de l'évènement", :class => "datetimepicker" }
            .col-md-12
              = f.submit "Créer un évènement", :class => "btn btn-primary pull-right", :style => "margin-top: 2%"


:javascript
  window.current_user_promo = #{current_user.promo}
  autocomplete_center = new (google.maps.places.Autocomplete)($('.adresse-autocomplete')[0])
