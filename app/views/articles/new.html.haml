.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-heading Créer un article
      .panel-body
      .panel
        .panel-body
        = bootstrap_form_for(@article, multipart: true) do |f|
          %center
            %h1 Formulaire de création d'article
          %br
            %br
              :css
                .bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form{font-family: Arial, Helvetica, sans-serif; color: black}.bootstrap-iso form button, .bootstrap-iso form button:hover{color: white !important;} .asteriskField{color: red;}/ HTML Form (wrapped in a .bootstrap-iso div)
              .bootstrap-iso
                .container-fluid
                  .row
                    .col-md-12.col-sm-12.col-xs-12
                      %form{:method => "post"}
                        .form-group
                          %label.control-label{:for => "Quel club veux tu rejoindre ?"}
                            Pour lequel de tes clubs veux tu créer un article ?
                            %span.asteriskField
                              *
                          .icon-addon.addon-md
                            %select.form-control
                              %option Nom du club
                              - @clubs.each do | club |
                                %option=club.name
                        .form-group
                          %label.control-label{:for => "Titre de l'article"}
                            Titre de l'article
                            %span.asteriskField
                              *
                          %input#subject.form-control{:name => "title", :type => "text", :placeholder => "Titre de l'article"}/
                        .form-group
                          %label.control-label{:for => "message"}
                            Contenu de l'article
                            %span.asteriskField
                              *
                          %textarea#message.form-control{:cols => "150", :name => "description", :rows => "10", :placeholder => "Entre ton texte ici"}
                        .col-md-6.col-sm-6.col-xs-12
                          .form-group
                            %label.control-label{:for => "date_begin_event"}
                              Date de début de l'évènement 
                            %input#subject.form-control{:name => "date_begin_event", :type => "date", :placeholder => "Date de début de l'évènement"}
                        .col-md-6.col-sm-6.col-xs-12
                          .form-group
                            %label.control-label{:for => "date_end_event"}
                              Date de fin de l'évènement 
                            %input#subject.form-control{:name => "date_end_event", :type => "date", :placeholder => "Date de fin de l'évènement"}/
                        .col-md-6.col-sm-6.col-xs-12
                          .form-group
                            %label.control-label{:for => "time_begin_event"}
                              Heure de début
                            %input#subject.form-control{:name => "time_begin_event", :type => "time", :placeholder => "Heure de début"}
                        .col-md-6.col-sm-6.col-xs-12
                          .form-group
                            %label.control-label{:for => "time_end_event"}
                              Heure de fin
                            %input#subject.form-control{:name => "time_end_event", :type => "time", :placeholder => "Heure de fin de l'évènement"}/
                        .form-group
                          %div
                            %button.btn.btn-primary{:name => "submit", :type => "submit", :class => "btn btn-primary pull-right"}
                              Publier l'article

:javascript
  window.current_user_promo = #{current_user.promo}
