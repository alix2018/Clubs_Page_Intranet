.row
  .col-md-10.col-md-offset-1
    .panel.panel-primary
      .panel-body
        %ul#myTab.nav.nav-pills.nav-justified
          %li
            %a{:href => "http://localhost:3000/club"} 
              %i.fa.fa-newspaper-o{"aria-hidden" => "true"}
              \&nbsp; News des clubs
          %li
            %a{:href => "http://localhost:3000/club/lesclubs"} 
              %i.fa.fa-users{"aria-hidden" => "true"}
              \&nbsp; Les Clubs
          %li.active
            %a{:href => "http://localhost:3000/club/subscribe"}
              %i.fa.fa-list{"aria-hidden" => "true"}
              \&nbsp; S'inscrire
        #myTabContent.tab-content
          #justifmenu01.tab-pane.fade.active.in
            %p
      .panel
        .panel-body
        = bootstrap_form_for(@club, multipart: true) do |f|
          %h3 Informations personnelles
          .row
            .col-md-6.col-xs-12
              = f.text_field :lastname, {label: "Nom"}
            .col-md-6.col-xs-12
              = f.text_field :name, {label: "Prenom"}
            .col-md-6.col-xs-12
              = f.text_field :phone, {label: "Telephone portable"}
            .col-md-6.col-xs-12
              = f.text_field :email, {label: "Email"}
            .col-md-6.col-xs-12
              = f.date_field :birthday, {label: "Anniversaire"}
            .col-md-6.col-xs-12
              = f.text_field :address, {label: "Adresse"}
            .col-md-6.col-xs-12
              %label Avatar
              .input-group
                %span.input-group-btn
                  %span.btn.btn-primary.btn-file
                    Choisir un fichier
                    = f.file_field :avatar, hide_label: true
                %input.form-control{:readonly => "readonly", :type => "text"}/      
            .col-md-6.col-xs-12
              %label CV
              .input-group
                %span.input-group-btn
                  %span.btn.btn-primary.btn-file
                    Choisir un fichier
                    = f.file_field :cv, hide_label: true
                %input.form-control{:readonly => "readonly", :type => "text"}/
                        .form-group
                          %div
                            %button.btn.btn-primary{:name => "submit", :type => "submit"}
                              Cr√©er mon club


